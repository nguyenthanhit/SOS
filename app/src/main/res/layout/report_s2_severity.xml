<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin"
    android:layout_marginEnd="@dimen/margin"
    tools:scrollable="true"
    android:orientation="vertical">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin"
            android:text="@string/severity"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_heading_size" />



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/btn_severity_high"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/paddingExtra"
            android:checked="true"
            android:paddingEnd="@dimen/paddingExtra"
            android:paddingTop="@dimen/padding"
            android:paddingBottom="@dimen/padding"
            android:textSize="@dimen/text_subheading_size"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:background="@drawable/selector_radio"
            android:textColor="@color/colorPrimaryTextInversed"
            android:drawableTop="@drawable/ic_ambulance"
            android:drawablePadding="@dimen/paddingEditText"
            android:text="@string/severity_high" />

        <RadioButton
            android:id="@+id/btn_severity_medium"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/paddingExtra"
            android:paddingEnd="@dimen/paddingExtra"
            android:paddingTop="@dimen/padding"
            android:paddingBottom="@dimen/padding"
            android:textSize="@dimen/text_subheading_size"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:background="@drawable/selector_radio"
            android:textColor="@color/colorPrimaryTextInversed"
            android:drawableTop="@drawable/ic_angle_double_up"
            android:drawablePadding="@dimen/paddingEditText"
            android:text="@string/severity_medium" />

        <RadioButton
            android:id="@+id/btn_severity_low"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/paddingExtra"
            android:paddingEnd="@dimen/paddingExtra"
            android:paddingTop="@dimen/padding"
            android:paddingBottom="@dimen/padding"
            android:textSize="@dimen/text_subheading_size"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:background="@drawable/selector_radio"
            android:textColor="@color/colorPrimaryTextInversed"
            android:drawableTop="@drawable/ic_angle_up"
            android:drawablePadding="@dimen/paddingEditText"
            android:text="@string/severity_low" />


    </RadioGroup>








</LinearLayout>