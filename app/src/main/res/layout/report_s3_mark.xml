<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/margin"
    android:layout_marginEnd="@dimen/margin"
    android:layout_marginBottom="@dimen/margin"
    tools:scrollable="true"
    android:weightSum="5"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/where_is_it"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_heading_size" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/marginExtra"
        android:layout_marginStart="@dimen/marginExtra"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/paddingEditText"
        android:paddingBottom="@dimen/padding"
        android:text="@string/where_is_it_sub"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_body_size" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp">

        <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
            android:layout_margin="@dimen/margin"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/ic_right"
        />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/ic_left"
            />

        <ImageView
            android:id="@+id/iv_part_of_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:padding="@dimen/padding"
            android:src="@mipmap/human_body_man_filled" />


    </FrameLayout>



    <Button
        android:id="@+id/btn_clear_marks"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:text="@string/clear_map"
        android:textAllCaps="true"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginBottom="@dimen/marginMedium"

        />

</LinearLayout>